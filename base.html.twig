<!DOCTYPE html>
<html lang="fr">

        <head>
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <meta name="description" content="Site installation des machine à café">
            <meta name="keywords" content="mise à disposition des machine à café et leurs approvisionnement">
            <meta name="author" content="Louiza GADFEL">

            <title>A.G-Distribution - {% block title %}{% endblock %}</title>

            <link rel="preconnect" href="https://fonts.googleapis.com" />
            <link rel="preconnect" href="https://fonts.gstatic.com " crossorigin />
            <link rel="preconnect" href="https://fonts.googleapis.com" />
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
            {# <link rel="stylesheet" href="{{ asset('css/base.css') }}">
            <link rel="stylesheet" href="{{ asset('css/form.css') }}"> 
            <link rel="stylesheet" href="{{ asset('css/btn.css') }}"> 
             #}
            
            
                {% block stylesheets %} {% endblock %}

        </head>
       
    <body>

        <header role="header">
            <nav class="menu">
                <div class="row" id="navigation">
                    <div class=" row m-left">
                        <a href="{{ path('home') }}"><img class=" col-6 col-md-4 col-lg-10 col-xl-10 logo" src="{{ asset('images/logo.png')}}" alt="logo"></a>
                    </div>
                    <div class="row">
                        <div class=" col-12 col-md-6 col-lg-8 col-xl-3" id="m-right">
                            <a href="{{ path('home') }}" class="m-link ">Accueil</a>
                            <a href="{{ path('machine_index') }}" class="m-link col-6 col-md-4 col-lg-10 col-xl-10">Machines</a>
                            <div class="nav-item dropdown">
                                <a href="{{ path('category_index') }}" class="nav-link dropdown-toggle" data-toggle="dropdown">Produits</a>
                                <div class="dropdown-menu">
                                    <a href="{{ path('category_index') }}" class="dropdown-item">Thé</a>
                                    <a href="{{ path('category_index') }}" class="dropdown-item">Chocolat</a>
                                    <a href="{{ path('category_index') }}" class="dropdown-item">Gourmant</a>
                                    <a href="{{ path('category_index') }}" class="dropdown-item">Café</a>
                                    <a href="{{ path('category_index') }}" class="dropdown-item">Accessoires</a>
                                    <a href="{{ path('category_index') }}" class="dropdown-item">Potages</a>
                                </div>
                            </div>
                            <a href="{{ path('contact_index') }}" class="m-link col-6 col-md-4 col-lg-10 col-xl-10">Contact</a>
                            {% if is_granted ('IS_AUTHENTICATED_FULLY') %}  
                                <div class="nav-iteam dropdown">
                                    <a href="{{ path('user_index') }}" class="nav-link dropdown-toggle" data-toggle="dropdown">Profil</a>
                                    <div class="dropdown-menu">
                                        <a href="{{ path('app_logout') }}" class="dropdown-item">Déconnexion</a>
                                    </div>
                                </div>
                            
                            {% else %}
                            <a href="{{ path('app_login') }}" class="m-link col-6 col-md-4 col-lg-10 col-xl-10">Connexion</a>
                            {% endif %}
                            <a href="{{ path('cart_index') }}"><img class= "m-link " src="{{ asset('images/panier1.png')}}" alt="panier"></a>
                        </div>
                    </div>
                </div> 
            </nav>
        </header>

        <main>
            {% block body %}{% endblock %}
                <div class="row">
                    <div class="col-8 offset-2">
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="flash-{{ label }} bg-{{ label}} text-danger p-3 mb-5 rounded">
                                {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
        </main>
        

        <footer class=" container-fluid footer">
            <div class="row text-center ">
                <div class="col-4" id="apropos">
                    <h5 class="h5">Apropos</h5>
                    <div class="dropdown-divider"></div>
                    <p><a href="{{ path('contact_index') }}">données personnelles</a></p>
                    <p><a href="{{ path('app_mentions_legales')}}">Mentions Légales</a></p>
                    <p><a href="{{ path('app_cgu')}}">CGU</a> , 
                       <a href="{{ path('app_cgv')}}">CGV</a></p>
                    <p><a href="#">cookies</a></p>
                    <p><a href="{{ path('contact_index') }}">Contact</a></p>
                    {% if is_granted('ROLE_ADMIN') %}
                        <p><a href="{{ path('admin') }}">Admin</a></p>
                    {% endif %}
                </div>
                <div class="col-4 my-auto">
                   <a href="{{ path('home') }}"> <img src="{{ asset('images/logo.png')}}" alt="logo A.G " class="w-100"></a>
                </div>
                <div class="col-4" id="icone">
                    <h5 class="h5">SUIVEZ NOUS SUR:</h5>
                    <div class="dropdown-divider"></div>
                  
                    <p><a href="https://www.linkedin.com/in/ets-gadfel-gadfel-9b482b198/?originalSubdomain=fr"><i class="fab fa-linkedin"></i></a></p>
                    <p><a href="https://www.facebook.com/etsgadfel/"><i class="fab fa-facebook"></i></a></i></p>
                    <p><a href="https://www.instagram.com/akligadfel/?hl=fr"><i class="fab fa-instagram"></i></a></p>
                    <p><a href="https://www.tiktok.com/@etsgadfel?lang=fr"><i class="fab fa-tiktok"></i></a></p>
                </div>
                
            </div>

            <div class="row">
                <div class="col-12 text-center" id="copyright">
                    <p>Copyright © 2022 - Louiza GADFEL</p>
                </div>
            </div>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="{{ asset('js/script.js') }}"></script>
       

        {% block javascripts %}{% endblock %}

    </body>
</html>