{% extends 'base.html.twig' %}

{% block title %} Inscription{% endblock %}

{% block body %}

    {# <div class="row">  #}
        <div class="col-8 offset-3">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-{{ label }} bg-{{ label }} text-light p-3 mb-5 rounded">
                    {{ message }}
                    </div>
                {% endfor %}
            {% endfor %} 
        </div> 
    {# </div>  #}

    <h1 class=" my-5 text-center">Inscription</h1>

    <div class="row py-5"> 
        <div class="col-6 offset-3">
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
                {{ form_row(registrationForm.agreeTerms) }}
                <div class="text-end">
                    <button type="submit" class="btn-register">Valider</button>
                </div>             
            {{ form_end(registrationForm) }}
        </div>
    </div>
    
{% endblock %}
