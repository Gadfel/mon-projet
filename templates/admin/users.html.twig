{% extends 'baseAdmin.html.twig' %}

{% block title %} Users{% endblock %}

{% block body %}

<h1 class ="text-center">  Liste des utilisateurs</h1>
<table class="table text-center table-hover table-sm">
    <thead>
        <tr>
            <th>N°</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>email</th>
            <th>Roles</th>
            <th>Nom de l'entreprise</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        
        {% for user in  users %}
            <tr>
                <td class="align-middle">{{ loop.index }}</td>
                <td class="align-middle">{{ user.lastName }}</td>
                <td class="align-middle">{{ user.firstName }}</td>
                <td class="align-middle">{{ user.email }}</td>
                <td class="align-middle">{{ user.roles|json_encode }}</td>
                <td class="align-middle">{{ user.companyName }}</td>
                 <td class="align-middle">
                    
                    <a href="{{ path('user_delete', {'id': user.id}) }}" class="text-danger"><i class="fas fa-trash-alt"></i></a> 
                </td>
            </tr>
        {% endfor %}
        
    </tbody>
</table>
