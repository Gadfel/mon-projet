{% extends 'baseAdmin.html.twig' %}

{% block title %}categories{% endblock %}

{% block body %}

<h1> liste des categories</h1>
<table class="table text-center table-hover table-sm">
    <thead>
        <tr>
            <th>NÂ°</th>
            <th>titre</th>
            <th>description</th>
            <th>Image </th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        
        {% for category in  categories %}
            <tr>
                <td class="align-middle">{{ loop.index}}</td>
                <td class="align-middle">{{ category.title }}</td>
                <td class="align-middle">{{ category.description }}</td>
                <td class="align-middle"><img src="{{ asset('images/categorie/'~ category.img) }}"alt="photo principale{{ category.title }}"></td>   
                <td class="align-middle">
                    <a href="{{ path('category_update',{'id':category.id})}}" class="text-primary"><i class="fas fa-pen-square"></i></a>
                    <a href="{{ path('category_delete', {'id': category.id})}}" class="text-danger"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% endfor %}
        
    </tbody>
</table>
<div class="d-flex justify-content-end my-5">
    <a href="{{ path('category_create') }}" class="btn btn-success">Ajouter une category</a>
</div>
{% endblock %}

