{% extends 'base.html.twig' %}

{% block title %} Address{% endblock %}

{% block body %}

<h1 class="text-center"> Addresse </h1>

    {{ form_start(profilForm) }}

        <div class="row py-5">

            <div class="col-6 offset-3 mb-3">
                {{ form_row(profilForm.address1) }}
            </div>

            <div class="col-6 offset-3 mb-3">
                {{ form_row(profilForm.address2) }}
            </div>

            <div class="col-6 offset-3 mb-3">
                {{ form_row(profilForm.postalCode) }}
            </div>

            <div class="col-6 offset-3 mb-3">
                {{ form_row(profilForm.city) }}
            </div>

            <div class="col-6 offset-3 mb-3">
                {{ form_row(profilForm.country) }}
            </div>
        </div>
    {{ form_end(profilForm) }}
            
{% endblock %}
