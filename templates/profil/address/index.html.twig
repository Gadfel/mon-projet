{% extends 'base1.html.twig' %}

{% block title %}Address{% endblock %}

{% block body %}

        <h1 class=" text-center py-5"> Address</h1>
        <table class="table text-center table-hover table-sm">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Nom</th>
                    <th>address</th>
                    <th>code postal</th>
                    <th>ville</th>
                    <th>pays</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                
                {% for addresse in  address %}
                    <tr class="text-center">
                        <td class="align-middle">{{ loop.index }}</td>
                        <td class="align-middle">{{ addresse.Name }}</td>
                        <td class="align-middle">{{ addresse.address }}</td>
                        <td class="align-middle">{{ addresse.postalCode }}</td>
                        <td class="align-middle">{{ addresse.city }}</td>
                        <td class="align-middle">{{ addresse.country }}</td>
                        <td class="align-middle">
                            <a href="{{ path('profil_address_update',{'id':addresse.id}) }}" class="btn4 btn-success m-3 text-center"> Modifier L'addresse </a> 
                            <a href="{{ path('profil_address_delete', {'id': addresse.id}) }}" class="btn4 btn-danger m-3" onclick="return confirm('Êtes-vous sûr de vouloir supprimer')"> suprimer L'addresse </a>
                        </td>
                    </tr>
                {% endfor %}
                
            </tbody>
        </table>
        <div class="d-flex justify-content-end my-5">
            <a href="{{ path('profil_address_create') }}" class="btn2 btn-success m-3"> Ajouter une  l'addresse </a> 
            <a href="{{ path('user_index') }}" class="btn2 btn-primary m-3">Retour</a>
        </div>
            {# <div class="d-flex justify-content-end my-5">
            <a href="{{ path('cart_service') }}" class="btn btn-success"> passer à l'etape suivante </a>
        </div> #}
{% endblock %}