{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}

<h1 class="text-center">   PANIER </h1>

    <div class="row">
        <div class="col-8 offset-2">
            <h2 class="mb-5">Votre Panier</h2>
            {% if cart is not empty %}
                <table class="table align-secondary">
                    <thead class= "text-center table-secondary">
                        <tr class="fw-bold">
                            <th>DESIGNATION</th>
                            <th>PRIX </th>
                            <th>QUANTITE</th>
                            <th>SOUS-TOTAL</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for line in cart %}
                            <tr>
                                <td>
                                    <a href="{{ path('product_index', {'id': line.product.id}) }}">
                                        <img src="{{ asset('images/produits/' ~ line.product.img) }}" alt="photo produit {{ line.product.name }}" class="me-3">{{ line.product.name }}
                                    </a>
                                    (<a href="{{ path('cart_delete' , {'id': line.product.id}) }}" class="text-danger">suprimer</a>)
                                </td>
                                <td class="text-end">{{ line.product.price|number_format(0,',', '') }} €</td>
                                <td class="text-center">
                                    <a href="{{ path('cart_remove', {'id': line.product.id}) }}"><i class="fas fa-minus-square text-danger"></i></a>
                                         <span class="mx-2">{{ line.quantity }}</span>
                                    <a href="{{ path('cart_add', {'id': line.product.id}) }}"><i class="fas fa-plus-square text-success"></i></a>
                                </td>
                                <td class="text-end">{{ (line.product.price * line.quantity)|number_format(0, ',', ' ') }} €</td>
                        
                            </tr>
                         {% endfor %}
                    </tbody>
                    <tfoot class="table-secondary text-end">
                        <tr class="fw-bold">
                            <th colspan="3">TOTAL :</th>
                            <th>{{ total|number_format(0, ',', ' ') }} €</th>
                        </tr>
                    </tfoot>
                </table>
                <div class="text-end mt-5">
                    <a href="{{ path('cart_clear') }}" class="btn btn-outline-danger me-3">Vider le panier</a>
                    <a href="{{ path('payment') }}" class="btn btn-success">Valider le panier</a>
                </div>
            {% else %}
                <p class="text-center my-5">Votre panier est vide : <a href="{{ path('product_index') }}" class="text-primary">parcourir les produits</a></p>
            {% endif %}
        </div>       
    </div>
    <div class="row my-5">
        <div class="col-8 offset-2">
            <div class="row">
                <h2 class="mb-5">les derniers produits</h2>
                {% for product in latestProducts %}
                    <div class="col-6">
                        <div class="card">
                            <img src="{{ asset('images/produits/' ~ product.img) }}" alt="photo produit {{ product.name}}" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <p class="card-text">{{ product.description|u.truncate(60, '...') }}</p>
                            </div>
                            <div class="card-body text-end">
                                <a href="{{ path('product_index', {'id': product.id}) }}" class="btn btn-outline-secondary btn-sm">Voir</a>
                                <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-success btn-sm">Ajouter au panier</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}
