{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-4 p-5 mx-auto">
            <h1 class=" mt-5 mb-3 text-center">Réinitialisez votre mot de passe</h1>

            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger mb-3 rounded" role="alert">{{ flash_error }}</div>
            {% endfor %}
            

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <small>
                        Entrez votre adresse e-mail et nous vous enverrons un
                        lien pour réinitialiser votre mot de passe.
                    </small>
                </div>

                <button class="btn btn-warning ">Envoyer un e-mail de réinitialisation du mot de passe</button>
            {{ form_end(requestForm) }}
         </div>   
    </div><br><br><br><br><br><br><br>
{% endblock %}
